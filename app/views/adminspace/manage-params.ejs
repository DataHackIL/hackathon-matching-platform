<% include ./partials/header-admin %>
<div class="container-fluid mt-1">
    <ul id="paramsList" class="list-group">
        <% params.forEach((param)=>{ %>
        <li class="list-group-item">
            <div class="row">
                <div class="col-md-6 col-xs-6 param-name">
                    <span><%= param.name %></span>
                </div>
                <div class="col-md-3 col-xs-3 col-lg-3 param-value">
                    <div class="btn-group" data-toggle="buttons">
                        <label class="btn btn-secondary <% if (param.isOpen){ %>active <% } %>">
                            <input type="radio" name="<%= param.name + '-true' %>" id="<%= param.name + '-true' %>"
                                   autocomplete="off" <% if (param.isOpen){ %>checked
                                    <% } %>
                            > Activate
                        </label>
                        <label class="btn btn-secondary <% if (!param.isOpen){ %>active <% } %>">
                            <input type="radio" name="<%= param.name + '-false' %>" id="<%= param.name + '-false' %>"
                                   autocomplete="off" <% if (!param.isOpen){ %>checked
                                    <% } %>
                            > Deactivate
                        </label>
                    </div>
                </div>
            </div>

        </li>
        <% }) %>
    </ul>
    <div class="params-buttons mt-2">
        <button id="updateParams" class="btn btn-primary btn-lg float-xs-right">Update Parameters</button>
    </div>
</div>
<% include ./../partials/modals.ejs %>
<% include ./partials/footer-admin %>
